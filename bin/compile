#!/usr/bin/env ruby

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"
require "fileutils"

sh 'echo "-----> Installing mdbtools 0.7"'
sh 'cd $1'
sh 'curl https://s3.amazonaws.com/db-stat/public/mdbtools-0.7.tar.gz -s -O'
sh 'mkdir -p vendor'
sh 'tar -C vendor -xvf mdbtools-0.7.tar.gz'
sh 'build_dir=$1'
sh 'mkdir -p $build_dir/.profile.d'
sh 'echo "export PATH=\"\$HOME/vendor/mdbtools/src/util:\$PATH\"" > $build_dir/.profile.d/mdbtools.sh'
sh 'echo "-----> Installation complete of mdbtools 0.7"'

LanguagePack::Instrument.trace 'compile', 'app.compile' do
  if pack = LanguagePack.detect(ARGV[0], ARGV[1])
    pack.topic("Compiling #{pack.name}")
    pack.log("compile") do
      pack.compile
    end
  end
end
